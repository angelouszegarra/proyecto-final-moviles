<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appfinanzas">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppFinanzas"
        tools:targetApi="31">

        <!-- Actividad principal (Pantalla de Inicio) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppFinanzas">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividades secundarias -->
        <activity
            android:name=".PresupuestosActivity"
            android:exported="true" />
        <activity
            android:name=".ConversorActivity"
            android:exported="true" />
        <activity
            android:name=".CalculadoraActivity"
            android:exported="true" />
        <activity
            android:name=".TemaActivity"
            android:exported="true" />
        <activity
            android:name=".TransferenciaActivity"
            android:exported="true" />

    </application>
</manifest>
